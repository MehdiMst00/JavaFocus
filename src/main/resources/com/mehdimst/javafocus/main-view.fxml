<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>

<AnchorPane onMouseDragged="#RootMouseDragged" onMousePressed="#RootMousePressed"
            onMouseClicked="#OnMouseDoubleClick"
        style="-fx-background-color: #141e2a; -fx-border-color: #1e3953; -fx-border-width: 5;"
            xmlns="http://javafx.com/javafx/9.0.10" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mehdimst.javafocus.ApplicationController">

    <VBox alignment="CENTER" layoutX="10.0" layoutY="9.0" prefHeight="351.0" prefWidth="587.0" spacing="10.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <HBox alignment="CENTER" spacing="40.0">

            <Label fx:id="timerLabel" text="02:00:00" textFill="WHITE">
                <font>
                    <Font size="61.0"/>
                </font>
            </Label>

        </HBox>
        <HBox alignment="CENTER" prefHeight="141.0" prefWidth="378.0" spacing="20.0">

            <JFXButton fx:id="startTimerButton" alignment="CENTER" buttonType="RAISED" contentDisplay="TOP"
                       onAction="#startTimer" ripplerFill="WHITE" text="Start" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </JFXButton>
            <JFXButton fx:id="pauseTimerButton" alignment="CENTER" buttonType="RAISED" contentDisplay="TOP"
                       onAction="#pauseTimer" ripplerFill="WHITE" text="Pause" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </JFXButton>
            <JFXButton alignment="CENTER" buttonType="RAISED" contentDisplay="TOP" onAction="#endTimer"
                       ripplerFill="WHITE" text="Stop" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </JFXButton>

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </VBox>

    <Pane prefHeight="35.0" prefWidth="600.0" style="-fx-background-color: #1e3953;" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Label layoutX="5.0" layoutY="5.0" prefHeight="19.0" prefWidth="127.0" text="Focus" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
    </Pane>

    <JFXButton onAction="#closeWindow" prefHeight="35.0" prefWidth="40.0" text="X" textFill="WHITE" AnchorPane.rightAnchor="0.0" />
    <JFXButton onAction="#MinWindow" prefHeight="35.0" prefWidth="49.0" text="-" textFill="WHITE"
               AnchorPane.rightAnchor="40.0" />
</AnchorPane>